{% block _annonce_images_widget %}
    <p>Ici, vous pouvez ajouter vos propres images !<P>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Ajouter une image
        </button>
    </div>
{% endblock _annonce_images_widget %}

{% block _annonce_images_entry_row %}
    {{ form_widget(form) }}
{% endblock _annonce_images_entry_row %}

{% block _annonce_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
           <div class="col-md-10">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
           </div>
           <div class="col-md-2">
                <button type="button" class="btn btn-danger" data-action="delete" 
                data-target="#block_{{id}}">X</button>
           </div>
        </div>
    </div>
{% endblock _annonce_images_entry_widget %}