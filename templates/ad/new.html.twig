{% extends "base.html.twig" %}

{% block title %}Création d'une annonce{% endblock title %}

{% form_theme form "ad/_collection.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="my-3">Créer une nouvelle annonce</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <div class="text-center">
            <button type="submit" class="btn btn-success ">
                <i class="fas fa-check"></i>
                Créer la nouvelle annonce
            </button>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock body %}

{% block javascripts %}
    {{ encore_entry_script_tags('ad') }}}
{% endblock javascripts %}
