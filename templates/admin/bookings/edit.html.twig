{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la réservation n° {{booking.id}}{% endblock title %}

{% block body %}
    <div class="container">
        <h4 class="my-4">Modification de la réservation n° {{booking.id}}</h4>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Réservation n° {{booking.id}}</h4>
                    </div>
                    <div class="card-body">
                                        
                        {{form_start(form)}}
                        {{form_widget(form)}}

                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i>
                                Enregistrer les modifications
                            </button>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        
        </div>
    </div>
{% endblock body %}