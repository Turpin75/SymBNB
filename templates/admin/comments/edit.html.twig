{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un commentaire{% endblock title %}

{% block body %}
    <div class="container-fluid">
        <h4 class="my-4">Modification du commentaire n°{{comment.id}}</h4>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card bg-light">
                    <div class="card-header">
                        <strong>Annonce liée</strong> : {{comment.ad.title}} <br>
                        <strong>Auteur</strong> : {{comment.author.fullName}} <br>
                        <strong>Date de création</strong> : {{comment.createdAt|date('d/m/Y H:i')}} <br>
                        <strong>Note donnée</strong> : {{comment.rating}}
                    </div>
                    <div class="card-body">
                        {{form_start(form)}}

                        {{form_widget(form)}}

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i>
                                Enregistrer les modifications
                            </button>
                        </div>

                        {{form_end(form)}}
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
{% endblock body %}


